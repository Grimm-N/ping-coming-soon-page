// RESET
*,
*::before,
*::after
  box-sizing border-box

html
  -moz-text-size-adjust none
  -webkit-text-size-adjust none
  text-size-adjust none

body, h1, h2, h3, h4, p,
figure, blockquote, dl, dd
  margin 0

ul[role='list'],
ol[role='list']
  list-style none

body
  min-height 100vh
  min-width 100vw

h1, h2, h3, h4,
button, input, label
  line-height 1.1

h1, h2,
h3, h4
  text-wrap balance

a:not([class])
  text-decoration-skip-ink auto
  color currentColor

img,
picture
  max-width 100%
  display block

input, button,
textarea, select
  font-family inherit
  font-size inherit

textarea:not([rows])
  min-height 10em

:target
  scroll-margin-block 5ex

// Fonts
@font-face
  font-family 'LibreFranklin'
  src: url('fonts/LibreFranklin-VariableFont_wght.woff2') format('woff2')
  src: url('fonts/LibreFranklin-VariableFont_wght.woff') format('woff')
  src: url('fonts/LibreFranklin-VariableFont_wght.ttf') format('truetype')
  font-weight 300, 600, 700
  font-style normal

// VARIABLES
red-color = hsl(354, 100%, 66%)
gray-color = hsl(0, 0%, 59%)
pale-blue = hsl(223, 100%, 88%)
blue-color = hsl(223, 87%, 63%)
dark-blue = hsl(209, 33%, 12%)

weight-light = 300
weight-semibold = 600
weight-bold = 700

// BODY
body 
  display flex
  align-items center
  justify-content center
  font-family 'LibreFranklin'
  font-size 1.25rem
  font-weight weight-light
  background linear-gradient(135deg, white, pale-blue, blue-color)
  background-repeat no-repeat

//Page
.page
  flex: 1 0 auto
  display flex
  justify-content center
  align-items center
  width 100%
  height: 64rem

.page__container
  display flex
  flex-direction column
  justify-content center
  align-items center
  text-align center
  max-width 40rem
  width 100%
  height: 100%
  margin 0 1.2rem

// Header
.page__header
  display flex
  margin-bottom: clamp(2.5rem, 10vw, 4.5rem)
  margin-top: clamp(2.5rem, 12vw, 6rem)

.header__logo
  font-size clamp(1.5rem, 2.2vw, 2rem)
  font-weight weight-bold
  line-height 1
  text-transform uppercase
  color dark-blue

  span 
    color blue-color

// Content
.page__info
  align-self center
  display flex
  flex-direction column
  align-items center
  gap 1.25rem
  max-width 35.5rem
  width 88.75%

.page__title
  font-size clamp(1.5rem, 3.25vw, 3rem)
  font-weight weight-light
  color gray-color
  
  span
    font-weight weight-bold
    color dark-blue

.page__subtitle
  font-size clamp(0.8rem, 1.5vw, 1.25rem)
  font-weight 400
  color dark-blue

// Form
.page__form
  display flex
  flex-direction column
  gap 1rem
  font-size 1.5rem
  max-width 35.5rem
  width 88.75%

.form__input
  padding 1.15rem 1.5rem
  border 0.1rem solid pale-blue
  border-radius 5rem
  font-weight weight-light
  font-size clamp(0.8rem, 1.2vw, 1rem);

.form__input::placeholder
  color pale-blue
  font-weight weight-light

.form__button
  padding 1rem 1.5rem
  background blue-color
  font-weight weight-semibold
  font-size clamp(0.8rem, 1.2vw, 1rem);
  color white
  border 0.1rem solid blue-color
  border-radius 4rem
  cursor pointer

// Image
.page__image
  max-width 100%
  height auto

// Footer
.page__footer
  display flex
  flex-direction column
  gap 3.25rem
  color white

.social__list
  display flex
  justify-content center
  gap 2rem

.social__icon
  display flex
  justify-content center
  width 1.75rem
  height 1.75rem
  border 0.1rem solid white
  border-radius 50%

.social__icon svg
  width 0.8rem
  height auto

.page__footer p 
  font-size 0.75rem

